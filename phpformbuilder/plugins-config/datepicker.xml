<?xml version="1.0" encoding="UTF-8"?>
<root>
    <default>
        <includes>
            <!--
                Path to css and js files into plugins folder.
                If your files are not in plugins folder, use absolute paths.
            -->
            <css>
                <file>jquery-ui/jquery-ui.min.css</file>
            </css>
            <js>
                <file>jquery-ui/jquery-ui.min.js</file>
                <file>jquery-ui/datepicker-i18n.min.js</file>
            </js>
        </includes>
        <js_code>
<![CDATA[   $("%selector%").datepicker();
    $.datepicker.setDefaults($.datepicker.regional[ "en"] );]]>
        </js_code>
    </default>
    <Y-m-d>
        <js_code>
<![CDATA[   $("%selector%").datepicker({
        dateFormat: "yy-mm-dd"
    });]]>
        </js_code>
    </Y-m-d>
    <polish>
        <js_code>
<![CDATA[   $("%selector%").datepicker();
    $.datepicker.setDefaults($.datepicker.regional[ "pl"] );]]>
        </js_code>
    </polish>
    <french>
        <js_code>
<![CDATA[   $("%selector%").datepicker();
    $.datepicker.setDefaults($.datepicker.regional[ "fr"] );]]>
        </js_code>
    </french>
    <custom>
        <!--
            If you need differents includes for your custom code,
            copy the default '<includes>' structure and put the needed files into '<file>' nodes.
            You can add several files nodes if necessary.
        -->
        <js_code>
            <!-- your custom code here -->
        </js_code>
    </custom>
</root>
