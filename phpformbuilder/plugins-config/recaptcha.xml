<?xml version="1.0" encoding="UTF-8"?>
<root>
    <default>
        <includes>
            <!--
                Path to css and js files into plugins folder.
                If your files are not in plugins folder, use absolute paths.
            -->
            <css></css>
            <js>
                <file>https://www.google.com/recaptcha/api.js</file>
                <file>recaptcha/jquery.ba-throttle-debounce.min.js</file>
                <file>recaptcha/responsive-recaptcha.min.js</file>
            </js>
        </includes>
        <js_code>
            var recaptchaCallBack = function() {
                $('.g-recaptcha').each(function() {
                    var recaptchaId = $(this).attr('id');
                    var recaptcha = grecaptcha.render(recaptchaId, {
                      'sitekey' : '%sitekey%',
                      'theme' : 'light'
                    });
                });
            }
        </js_code>
    </default>
</root>
